<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        *{
            font-family:MSYH;
            font-size: 9pt;
        }
        html * {
            margin: 0 auto;
        }

        body {
            width: 100%;
            /*height: 13.5cm;*/
        }

        table {
            width: 100%;
        }

        .content {
            /*padding: 20px 20px 10px 20px;*/
        }

        .head {
            width: 100%;
            padding-bottom:2px;
        }

        .patientinfo {
            width: 100%;
            border-top: 2px solid #000;
            border-bottom: 2px solid #000;
            padding-bottom:2px;
        }

        .patientinfo td {
            /*padding-top:2px;
            padding-bottom:2px;*/
        }

        .patientinfo td span {
            padding-left: 5px;
        }

        .result {
            width: 100%;
            height: 7.5cm;
        }

        .result table {
            width: 100%;
        }

        .result table tr th {
            text-align: left;
            font-bold: weight;
            border-bottom: 1px solid #000;
            padding-bottom:2px;
        }

        .result table tr td {
            text-align: left;
            #if($!resultSize <6)
                font-size: 10.5pt;
            #end
        }

        .footer {
            width: 100%;
        }

        .footer table {
            width: 100%;
        }

        .footer tr td {
            font-size: 7.5pt;
        }

        .headtitle {
            font-size: 16pt;
            font-weight: bold;
        }

        .llogo img, .rlogo img {
            width: 160px;
            height: 50px;
        }

        .rlogo {
            text-align: right;
        }

        .line1 td {
            border-bottom: 1px solid #000;
            padding-bottom:2px;
        }

        .line2 td {
            border-bottom: 2px solid #000;
            padding-bottom:2px;
        }
    </style>
</head>
<body>
<div class="content">
    #parse ("/template/testReportHead.vm")
    <!--结果信息 start-->
    <div class="result">
        <table cellpadding="0" cellspacing="0">
            <colgroup>
                <col width="35%"/>
                <col width="15%"/>
                <col width="5%"/>
                <col width="35%"/>
                <col width="10%"/>
            </colgroup>
            <tr>
                <th>检验项目</th>
                <th>结果</th>
                <th>&#160;</th>
                <th>参考值</th>
                <th>单位</th>
            </tr>
            #foreach($item in $results)
                <tr>
                    <td>$!item.testName</td>
                    <td>$!item.testResult</td>
                    <td>$!item.resultFlag</td>
                    <td>$!item.reference</td>
                    <td>$!item.unit</td>
                </tr>
            #end
        </table>
    </div>
    <!--结果信息 end-->
    #parse ("/template/testReportFooter.vm")
</div>
</body>
</html>